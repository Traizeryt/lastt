    <script>
        // Navigation bar scroll behavior
        window.addEventListener('scroll', function() {
            const navbar = document.querySelector('.navbar');
            if (window.scrollY > 50) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });

        // Get all navigation items
        const navItems = document.querySelectorAll('.nav-item');
        
        // Add click event to all navigation items
        navItems.forEach(item => {
            item.addEventListener('click', function() {
                // Remove active class from all items
                navItems.forEach(nav => nav.classList.remove('active'));
                
                // Add active class to the clicked item
                this.classList.add('active');
            });
        });
        
        // Performance benefits section animation
        document.addEventListener('DOMContentLoaded', function() {
            // Add a class to help identify performance benefits cards
            const performanceBenefits = document.querySelectorAll('.performance-section .benefit-box');
            
            // Set initial state for section and elements
            const performanceSection = document.querySelector('.performance-section');
            if (performanceSection) {
                performanceSection.style.opacity = '0';
                performanceSection.style.transform = 'translateY(30px)';
                performanceSection.style.transition = 'opacity 0.4s ease, transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275)';
            }
            
            const performanceHeading = document.querySelector('.performance-section .performance-heading');
            if (performanceHeading) {
                performanceHeading.style.opacity = '0';
                performanceHeading.style.transform = 'translateY(30px)';
                performanceHeading.style.transition = 'opacity 0.4s ease, transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275)';
            }
            
            const performanceTitle = document.querySelector('.performance-section .performance-title');
            if (performanceTitle) {
                performanceTitle.style.opacity = '0';
                performanceTitle.style.transform = 'translateY(30px)';
                performanceTitle.style.transition = 'opacity 0.4s ease, transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275)';
            }
            
            performanceBenefits.forEach(benefit => {
                benefit.style.opacity = '0';
                benefit.style.transform = 'translateY(50px)';
                benefit.style.transition = 'opacity 0.4s ease, transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275)';
            });
            
            // Function to check if element is in viewport
            const isInViewport = (elem) => {
                const rect = elem.getBoundingClientRect();
                return (
                    rect.top <= (window.innerHeight || document.documentElement.clientHeight) * 0.85 &&
                    rect.bottom >= 0
                );
            };
            
            // Function to handle the scroll animation
            const handleScrollAnimation = () => {
                if (performanceSection && isInViewport(performanceSection)) {
                    // Animate the section first
                    performanceSection.style.opacity = '1';
                    performanceSection.style.transform = 'translateY(0)';
                    
                    // Then animate the title with slight delay
                    setTimeout(() => {
                        if (performanceTitle) {
                            performanceTitle.style.opacity = '1';
                            performanceTitle.style.transform = 'translateY(0)';
                        }
                    }, 200);
                    
                    // Then animate the heading with slight delay
                    setTimeout(() => {
                        if (performanceHeading) {
                            performanceHeading.style.opacity = '1';
                            performanceHeading.style.transform = 'translateY(0)';
                        }
                    }, 400);
                    
                    // Finally animate each benefit box with staggered delay
                    performanceBenefits.forEach((benefit, index) => {
                        setTimeout(() => {
                            benefit.style.opacity = '1';
                            benefit.style.transform = 'translateY(0)';
                        }, 600 + (index * 150)); // Staggered delay for each card
                    });
                    
                    // Remove scroll listener once animation is done
                    window.removeEventListener('scroll', handleScrollAnimation);
                }
            };
            
            // Apply initial animation if section is already visible
            setTimeout(handleScrollAnimation, 500);
            
            // Apply animation on scroll
            window.addEventListener('scroll', handleScrollAnimation);
            
            // Gaming Success Dashboard Animations
            const animateGamingDashboard = () => {
                const dashboardSection = document.querySelector('.gaming-success-dashboard');
                if (!dashboardSection) return;
                
                // Animate circular progress
                const progressCircle = document.querySelector('.progress-ring-circle');
                if (progressCircle && isInViewport(progressCircle)) {
                    const radius = progressCircle.r.baseVal.value;
                    const circumference = radius * 2 * Math.PI;
                    const targetValue = 97; // Customer satisfaction percentage
                    
                    progressCircle.style.strokeDasharray = `${circumference} ${circumference}`;
                    progressCircle.style.strokeDashoffset = circumference;
                    
                    setTimeout(() => {
                        const offset = circumference - (targetValue / 100) * circumference;
                        progressCircle.style.strokeDashoffset = offset;
                    }, 500);
                }
                
                // Animate counters
                const counters = document.querySelectorAll('.gaming-success-dashboard .counter');
                counters.forEach(counter => {
                    if (isInViewport(counter)) {
                        const target = parseInt(counter.getAttribute('data-target'));
                        let count = 0;
                        const duration = 2000; // Animation duration in ms
                        const step = Math.max(1, Math.floor(target / (duration / 16))); // 16ms is approx one frame at 60fps
                        
                        const updateCount = () => {
                            if (count < target) {
                                count += step;
                                if (count > target) count = target;
                                counter.innerText = Math.floor(count);
                                requestAnimationFrame(updateCount);
                            } else {
                                counter.innerText = target;
                            }
                        };
                        
                        setTimeout(() => {
                            updateCount();
                        }, 500);
                    }
                });
                
                // Set bar fill widths
                const barFills = document.querySelectorAll('.bar-fill');
                barFills.forEach(fill => {
                    if (isInViewport(fill)) {
                        const width = fill.style.width;
                        fill.style.setProperty('--width', width);
                    }
                });
                
                // Animate activity feed items
                const activityItems = document.querySelectorAll('.activity-item');
                activityItems.forEach((item, index) => {
                    if (isInViewport(item)) {
                        item.style.opacity = '0';
                        item.style.transform = 'translateX(-20px)';
                        item.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                        
                        setTimeout(() => {
                            item.style.opacity = '1';
                            item.style.transform = 'translateX(0)';
                        }, 300 + (index * 150));
                    }
                });
            };
            
            // Check dashboard animations on scroll and initial load
            window.addEventListener('scroll', animateGamingDashboard);
            setTimeout(animateGamingDashboard, 500);
            
            // Simulate new activity items appearing periodically
            const simulateNewActivity = () => {
                const activityFeed = document.querySelector('.activity-feed');
                if (!activityFeed) return;
                
                const activities = [
                    { type: 'new-order', time: 'Just now', name: 'Chris M.', location: 'Germany', action: 'purchased Premium Package' },
                    { type: 'new-review', time: 'Just now', name: 'Sophia L.', location: 'France', rating: 5, quote: '"Ping reduced by 40ms in Apex Legends!"' },
                    { type: 'new-order', time: 'Just now', name: 'Daniel K.', location: 'Brazil', action: 'purchased Standard Package' },
                    { type: 'new-review', time: 'Just now', name: 'Emma R.', location: 'Sweden', rating: 5, quote: '"Finally no more stuttering in CS2!"' }
                ];
                
                // Select random activity
                const randomActivity = activities[Math.floor(Math.random() * activities.length)];
                
                // Create new activity item
                const newItem = document.createElement('div');
                newItem.className = `activity-item ${randomActivity.type}`;
                newItem.style.opacity = '0';
                newItem.style.transform = 'translateX(-20px)';
                newItem.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                
                if (randomActivity.type === 'new-order') {
                    newItem.innerHTML = `
                        <div class="activity-time">${randomActivity.time}</div>
                        <div class="activity-content">
                            <div class="activity-icon"><i class="fas fa-shopping-cart"></i></div>
                            <div class="activity-details">
                                <p><strong>${randomActivity.name}</strong> from ${randomActivity.location}</p>
                                <p class="activity-action">${randomActivity.action}</p>
                            </div>
                        </div>
                    `;
                } else {
                    let stars = '';
                    for (let i = 0; i < randomActivity.rating; i++) {
                        stars += '<i class="fas fa-star"></i>';
                    }
                    
                    newItem.innerHTML = `
                        <div class="activity-time">${randomActivity.time}</div>
                        <div class="activity-content">
                            <div class="activity-icon"><i class="fas fa-star"></i></div>
                            <div class="activity-details">
                                <p><strong>${randomActivity.name}</strong> from ${randomActivity.location}</p>
                                <div class="review-stars">
                                    ${stars}
                                </div>
                                <p class="review-quote">${randomActivity.quote}</p>
                            </div>
                        </div>
                    `;
                }
                
                // Add to feed and animate
                if (activityFeed.children.length >= 6) {
                    activityFeed.removeChild(activityFeed.lastChild);
                }
                
                activityFeed.insertBefore(newItem, activityFeed.firstChild);
                
                setTimeout(() => {
                    newItem.style.opacity = '1';
                    newItem.style.transform = 'translateX(0)';
                }, 100);
                
                // Update times for other activities
                const otherActivities = activityFeed.querySelectorAll('.activity-item:not(:first-child)');
                otherActivities.forEach(item => {
                    const timeEl = item.querySelector('.activity-time');
                    let currentTime = timeEl.textContent;
                    
                    if (currentTime === 'Just now') {
                        timeEl.textContent = '1 min ago';
                    } else if (currentTime.includes('min')) {
                        const minutes = parseInt(currentTime);
                        if (!isNaN(minutes)) {
                            timeEl.textContent = `${minutes + 1} mins ago`;
                        }
                    }
                });
            };
            
            // Simulate new activity every 8-15 seconds
            const startActivitySimulation = () => {
                const randomInterval = Math.floor(Math.random() * (15000 - 8000 + 1)) + 8000;
                setTimeout(() => {
                    simulateNewActivity();
                    startActivitySimulation();
                }, randomInterval);
            };
            
            // Start simulation after 10 seconds
            setTimeout(startActivitySimulation, 10000);
        });
        
        // Animation on scroll
        document.addEventListener('DOMContentLoaded', function() {
            // Add animations to elements
            const animateElements = document.querySelectorAll('.hero-title, .hero-subtitle, .btn-container, .hero-img');
            
            // Animate hero section elements on page load
            setTimeout(() => {
                animateElements.forEach(el => {
                    el.classList.add('animate');
                });
            }, 100);

            // Function to check if element is in viewport
            const isInViewport = (el) => {
                const rect = el.getBoundingClientRect();
                return (
                    rect.top <= (window.innerHeight || document.documentElement.clientHeight) * 0.85 &&
                    rect.bottom >= 0
                );
            };

            // Elements to animate when they come into view
            const scrollAnimateElements = document.querySelectorAll(
                '.trusted-title, .game-logo, ' +
                '.how-title, .step-card, .features-title, .reviews-title, .feature-card, ' + 
                '.testimonials-title, .testimonial-card, .faq-title, .faq-item'
            );
            
            // Initial check for elements in viewport
            scrollAnimateElements.forEach(el => {
                if (isInViewport(el)) {
                    el.classList.add('animate');
                    
                    // Apply staggered animation delays for game logos
                    if (el.classList.contains('game-logo')) {
                        const gameLogos = document.querySelectorAll('.game-logo');
                        const index = Array.from(gameLogos).indexOf(el);
                        el.style.animationDelay = `${index * 0.05}s`; // Changed from 0.1s to 0.05s
                    }
                    
                    // Apply staggered animation delays for testimonial cards
                    if (el.classList.contains('testimonial-card')) {
                        el.style.transitionDelay = `${index * 0.08}s`; // Changed from 0.15s to 0.08s
                    }
                    
                    // Apply staggered animation delays for FAQ items
                    if (el.classList.contains('faq-item')) {
                        el.style.transitionDelay = `${index * 0.05}s`; // Changed from 0.1s to 0.05s
                    }
                }
            });

            // Check for elements on scroll
            window.addEventListener('scroll', () => {
                scrollAnimateElements.forEach(el => {
                    if (isInViewport(el) && !el.classList.contains('animate')) {
                        el.classList.add('animate');
                        
                        // Apply staggered animation delays for game logos
                        if (el.classList.contains('game-logo')) {
                            const gameLogos = document.querySelectorAll('.game-logo');
                            const index = Array.from(gameLogos).indexOf(el);
                            el.style.animationDelay = `${index * 0.05}s`; // Changed from 0.1s to 0.05s
                        }
                        
                        // Apply staggered animation delays for testimonial cards
                        if (el.classList.contains('testimonial-card')) {
                            el.style.transitionDelay = `${index * 0.08}s`; // Changed from 0.15s to 0.08s
                        }
                        
                        // Apply staggered animation delays for FAQ items
                        if (el.classList.contains('faq-item')) {
                            el.style.transitionDelay = `${index * 0.05}s`; // Changed from 0.1s to 0.05s
                        }
                    }
                });
                
                // Animate step cards with delay
                const stepCards = document.querySelectorAll('.step-card');
                stepCards.forEach((card, index) => {
                    if (isInViewport(card) && !card.classList.contains('animate')) {
                        setTimeout(() => {
                            card.classList.add('animate');
                        }, index * 100); // Changed from 200 to 100
                    }
                });
            });
            
            // Counter animation function
            const animateCounter = (counter, target, suffix = '') => {
                const speed = 200; // Animation speed - lower is faster
                const inc = target / speed;
                let currentCount = 0;
                
                const updateCount = () => {
                    if (currentCount < target) {
                        currentCount += inc;
                        if (currentCount > target) currentCount = target;
                        counter.innerText = Math.floor(currentCount);
                        requestAnimationFrame(updateCount);
                    } else {
                        counter.innerText = target;
                    }
                };
                
                updateCount();
            };
            
            // Animate counters when they come into view
            const counterElements = document.querySelectorAll('.counter');
            let counterAnimated = false;
            
            // Function to check and start counter animations
            const checkCounters = () => {
                const statsSection = document.querySelector('.stats-overview');
                if (statsSection && isInViewport(statsSection) && !counterAnimated) {
                    counterAnimated = true;
                    counterElements.forEach(counter => {
                        const target = parseInt(counter.getAttribute('data-target'));
                        counter.innerText = '0';
                        setTimeout(() => {
                            animateCounter(counter, target);
                        }, 400); // Slight delay before starting animation
                    });
                }
            };
            
            // Check counters on initial load and scroll
            checkCounters();
            window.addEventListener('scroll', checkCounters);
            
            // Gamer Success Hub animations
            const animateGamerHub = () => {
                const hubSection = document.querySelector('.gamer-success-hub');
                if (!hubSection) return;
                
                // Animate metric numbers
                const metricNumbers = document.querySelectorAll('.metric-number');
                metricNumbers.forEach(number => {
                    if (isInViewport(number)) {
                        const value = parseInt(number.getAttribute('data-value'));
                        let count = 0;
                        const duration = 2000; // Animation duration in ms
                        const step = Math.max(1, Math.floor(value / (duration / 16))); // 16ms is approx one frame at 60fps
                        
                        const updateCount = () => {
                            if (count < value) {
                                count += step;
                                if (count > value) count = value;
                                number.innerText = Math.floor(count);
                                requestAnimationFrame(updateCount);
                            } else {
                                number.innerText = value;
                            }
                        };
                        
                        setTimeout(() => {
                            updateCount();
                        }, 500);
                    }
                });
                
                // Animate feed items
                const feedItems = document.querySelectorAll('.feed-item');
                feedItems.forEach((item, index) => {
                    if (isInViewport(item)) {
                        setTimeout(() => {
                            item.style.opacity = '1';
                            item.style.transform = 'translateX(0)';
                        }, 300 + (index * 150));
                    }
                });
            };
            
            // Check Gamer Success Hub animations on scroll and initial load
            window.addEventListener('scroll', animateGamerHub);
            setTimeout(animateGamerHub, 500);
            
            // Simulate new feed item periodically
            const simulateNewFeedItem = () => {
                const feedContainer = document.querySelector('.feed-container');
                if (!feedContainer) return;
                
                const items = [
                    { type: 'order', location: 'United Kingdom' },
                    { type: 'review', location: 'Australia' },
                    { type: 'order', location: 'Japan' },
                    { type: 'review', location: 'Brazil' }
                ];
                
                // Select random item
                const randomItem = items[Math.floor(Math.random() * items.length)];
                
                // Create new feed item
                const newItem = document.createElement('div');
                newItem.className = 'feed-item';
                newItem.style.opacity = '0';
                newItem.style.transform = 'translateX(-20px)';
                newItem.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                
                if (randomItem.type === 'order') {
                    newItem.innerHTML = `
                        <div class="feed-icon order-icon">
                            <i class="fas fa-shopping-cart"></i>
                        </div>
                        <div class="feed-content">
                            <p><strong>New Order</strong> from ${randomItem.location}</p>
                            <span class="feed-time">Just now</span>
                        </div>
                    `;
                } else {
                    newItem.innerHTML = `
                        <div class="feed-icon review-icon">
                            <i class="fas fa-star"></i>
                        </div>
                        <div class="feed-content">
                            <p><strong>5â˜… Review</strong> from ${randomItem.location}</p>
                            <span class="feed-time">Just now</span>
                        </div>
                    `;
                }
                
                // Add to feed and animate
                if (feedContainer.children.length >= 5) {
                    feedContainer.removeChild(feedContainer.lastChild);
                }
                
                feedContainer.insertBefore(newItem, feedContainer.firstChild);
                
                setTimeout(() => {
                    newItem.style.opacity = '1';
                    newItem.style.transform = 'translateX(0)';
                }, 100);
                
                // Update times for other items
                const otherItems = feedContainer.querySelectorAll('.feed-item:not(:first-child)');
                otherItems.forEach(item => {
                    const timeEl = item.querySelector('.feed-time');
                    let currentTime = timeEl.textContent;
                    
                    if (currentTime === 'Just now') {
                        timeEl.textContent = '1 min ago';
                    } else if (currentTime.includes('min')) {
                        const minutes = parseInt(currentTime);
                        if (!isNaN(minutes)) {
                            timeEl.textContent = `${minutes + 1} mins ago`;
                        }
                    }
                });
            };
            
            // Simulate new feed item every 10-20 seconds
            const startFeedSimulation = () => {
                const randomInterval = Math.floor(Math.random() * (20000 - 10000 + 1)) + 10000;
                setTimeout(() => {
                    simulateNewFeedItem();
                    startFeedSimulation();
                }, randomInterval);
            };
            
            // Start simulation after 5 seconds
            setTimeout(startFeedSimulation, 5000);
        });

