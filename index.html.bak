    <!-- Script for Premium Features Animation -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Function to check if element is in viewport
            const isInViewport = (el) => {
                const rect = el.getBoundingClientRect();
                return (
                    rect.top <= (window.innerHeight || document.documentElement.clientHeight) * 0.8 &&
                    rect.bottom >= 100
                );
            };
            
            // Handle animation for premium feature cards
            const premiumFeatureCards = document.querySelectorAll('.premium-feature-card');
            
            const checkPremiumFeatures = () => {
                premiumFeatureCards.forEach((card) => {
                    if (isInViewport(card)) {
                        const delay = card.getAttribute('data-aos-delay') || 0;
                        setTimeout(() => {
                            card.classList.add('aos-animate');
                        }, delay);
                    }
                });
            };
            
            // Check on scroll
            window.addEventListener('scroll', checkPremiumFeatures);
            
            // Initial check
            setTimeout(checkPremiumFeatures, 300);
            
            // Stats counter animation
            const statsCounters = document.querySelectorAll('.stats-showcase-section .stats-number');
            let statsCounterStarted = false;
            
            const animateStatsCounter = (counter) => {
                const target = parseInt(counter.getAttribute('data-target'));
                let count = 0;
                const duration = 2000; // Animation duration in ms
                const step = Math.max(1, Math.floor(target / (duration / 16))); // 16ms is approx one frame at 60fps
                
                // For different counter types
                const suffix = counter.closest('.stats-card') && 
                              counter.closest('.stats-card').querySelector('.stats-label').innerText.includes('Satisfaction') ? '%' : 
                              counter.closest('.stats-card').querySelector('.stats-label').innerText.includes('Reviews') ? '+' :
                              counter.closest('.stats-card').querySelector('.stats-label').innerText.includes('Orders') ? '+' :
                              counter.closest('.stats-card').querySelector('.stats-label').innerText.includes('Hours') ? '/7' : '';
                
                const updateCount = () => {
                    if (count < target) {
                        count += step;
                        if (count > target) count = target;
                        counter.innerText = Math.floor(count) + suffix;
                        requestAnimationFrame(updateCount);
                    } else {
                        counter.innerText = target + suffix;
                    }
                };
                
                updateCount();
            };
            
            // Check and animate stats counters
            const checkStatsCounters = () => {
                const statsSection = document.querySelector('.stats-showcase-section');
                if (statsSection && isInViewport(statsSection) && !statsCounterStarted) {
                    statsCounterStarted = true;
                    
                    // Add staggered animation for each counter
                    statsCounters.forEach((counter, index) => {
                        setTimeout(() => {
                            animateStatsCounter(counter);
                        }, 300 + (index * 150));
                    });
                }
            };
            
            // Check on scroll and initial load
            window.addEventListener('scroll', checkStatsCounters);
            setTimeout(checkStatsCounters, 500);
            
            // Add entrance animation for stats cards
            const statsCards = document.querySelectorAll('.stats-card');
            
            const animateStatsCards = () => {
                const statsSection = document.querySelector('.stats-showcase-section');
                if (statsSection && isInViewport(statsSection)) {
                    statsCards.forEach((card, index) => {
                        setTimeout(() => {
                            card.style.opacity = '1';
                            card.style.transform = 'translateY(0)';
                        }, 200 + (index * 150));
                    });
                }
            };
            
            // Set initial state for stats cards
            statsCards.forEach(card => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(30px)';
                card.style.transition = 'opacity 0.8s ease, transform 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275)';
            });
            
            // Check on scroll and initial load
            window.addEventListener('scroll', animateStatsCards);
            setTimeout(animateStatsCards, 500);
        });
    </script>

    <!-- Slide-up Animation Script -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Remove any other animation scripts that might be running
            const disableOtherAnimations = function() {
                const allAnimatedElements = document.querySelectorAll('[data-aos], .animated, .animate, .fade-up, .fade-in');
                allAnimatedElements.forEach(el => {
                    el.classList.remove('aos-animate', 'animated', 'animate', 'fade-up', 'fade-in');
                    el.removeAttribute('data-aos');
                    el.removeAttribute('data-aos-delay');
                });
            };
            
            disableOtherAnimations();
            
            // Add slide-up animation classes to hero elements
            const animateElements = [
                { selector: '.hero-title', delay: 300 },
                { selector: '.title-text', delay: 300 },
                { selector: '.gradient-text', delay: 800 },
                { selector: '.hero-description', delay: 1000 },
                { selector: '.btn-container', delay: 1200 },
                { selector: '.app-showcase', delay: 1400 }
            ];
            
            // Apply animation with delay (elements are already set to opacity:0 in CSS)
            animateElements.forEach(item => {
                const element = document.querySelector(item.selector);
                if (element) {
                    setTimeout(() => {
                        element.style.opacity = '1';
                        element.style.transform = 'translateY(0)';
                    }, item.delay);
                }
            });
            
            // Stop all other animations
            const stopAnimations = function() {
                const styleSheet = document.createElement('style');
                styleSheet.innerText = `
                    @keyframes none {
                        0% { }
                        100% { }
                    }
                    
                    .premium-feature-card, [data-aos], .animated, .fade-in, .fade-up, .slide-left, .slide-right, .zoom-in,
                    .trusted-title, .game-logo, .performance-title, .performance-heading, .benefit-box,
                    .testimonials-title, .testimonial-card, .faq-title, .faq-item,
                    .premium-title, .premium-description, .premium-feature-card {
                        animation: none !important;
                        opacity: 1 !important;
                        transform: none !important;
                        transition: none !important;
                    }
                `;
                document.head.appendChild(styleSheet);
            };
            
            // Stop other animations after our main animations complete
            setTimeout(stopAnimations, 2000);
        });
    </script>
