    <!-- Immediate Animation Script -->
    <script>
        // Execute immediately, don't wait for DOMContentLoaded
        (function() {
            document.addEventListener('DOMContentLoaded', function() {
                // Set appropriate delays for our elements
                const animateElements = [
                    { selector: '.hero-title', delay: 300 },
                    { selector: '.title-text', delay: 300 },
                    { selector: '.gradient-text', delay: 800 },
                    { selector: '.hero-description', delay: 1000 },
                    { selector: '.btn-container', delay: 1200 },
                    { selector: '.app-showcase', delay: 1400 }
                ];
                
                // Apply our animations with delay
                animateElements.forEach(item => {
                    const element = document.querySelector(item.selector);
                    if (element) {
                        setTimeout(() => {
                            element.style.opacity = '1';
                            element.style.transform = 'translateY(0)';
                        }, item.delay);
                    }
                });
            });
        })();
